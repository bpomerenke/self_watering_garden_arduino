<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.autogarden">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AutoGardenApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/auto_garden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SensorDetailActivity"
            android:label="@string/device_Detail" />
        <activity
            android:name=".SensorListActivity"
            android:label="@string/auto_garden"></activity>
    </application>

</manifest>
